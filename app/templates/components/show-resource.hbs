{{#if isEditing}}
<h4>{{input value=title}}</h4>
  <p>{{input value=url}}</p> 
  <p>{{input value=topic}}</p> 
  <p>{{textarea value=description}}</p> 
  <button {{action 'update'}} id="save">Save</button>

{{else}}
<h4 id="title">{{title}}</h4>  
  <p>{{url}}</p> 
  <p>topic: {{topic}}</p> 
  <p id="description">description: {{description}}</p>

{{/if}}

